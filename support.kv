#: import FadeTransition kivy.uix.screenmanager.FadeTransition

ScreenManagement:
    transition: FadeTransition()
    Home:
    Gender_Screen:
    Height_Screen:
    Weight_Screen:
    Result_Screen:

	
<Home>:
    name: 'home'


    canvas:
        Color:
            rgb: (0.93, 0.93, 0.93)
        Rectangle:
            pos: self.pos
            size: self.size


    FloatLayout:
        Button:
            color: 1,1,1,1
            background_color: 0,0,1,1
            text: 'Next'
            font_size: 40
            size_hint: 0.2,0.1
            pos_hint: {"right":0.9,"top":0.2} 
            on_release: app.root.current = 'gender'
        
        Label:
            markup: True
            color: 0,0,0,1
            text: '[b]Body Mass Index Calculator[/b]'
            font_size: 40
            color: 0,0,0,1
             
            
