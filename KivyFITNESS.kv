#: import CheckBox kivy.uix.checkbox

ScreenManagement:
    HomeScreen:
    GenderScreen:
    HeightScreen:
    WeightScreen:
    OptionalScreen:
    ResultScreen:


<CustLabel@Label>:
    color: 0, 0, 0, 1

<CustCheckBox@CheckBox>:
    _radio_state_image:
        self.background_radio_normal
    canvas:
        Rectangle:
            source: self._radio_state_image
            size: sp(200), sp(300)
            pos: int(self.center_x - sp(100)), int(self.center_y - sp(150))

<NextButton@Button>:
    text: "Next"
    size_hint_x: 1
    size_hint_y: 0.1  
    background_color: 0,0,1,1  

<HomeScreen>:
    name: 'home_screen'
    canvas:
        Rectangle:
            source: "Window_Background.png"
            pos: self.pos
            size: self.size
        
    BoxLayout:
        orientation:"horizontal"

        BoxLayout:
            orientation: "vertical"
                    
            Button:
                on_press:
                    root.manager.current = 'gender_screen' if root.shouldGo() else 'home_screen'
                    root.manager.transition.direction = 'left'
                    root.manager.transition.duration = 0.5
                text: "CHECK\nYOUR\nBMI"
                size_hint_x: 0.8
                size_hint_y: 0.1
                font_size : 50
                background_color: 0,0,1,1
                id: checkBtn
                

        BoxLayout:
            orientation: "vertical"

            BoxLayout:
                orientation: "vertical"
                size_hint_y : 0.5
                padding: 20, 240

                Label:
                    text : "Enter Information"
                    size_hint_y : 0.15    
                    color: 0, 0, 0, 1
                    font_size: 20
                    size_hint_x : 0.2

                TextInput:
                    text : ""
                    size_hint_x : 0.8
                    size_hint_y : 0.1
                    multiline: False
                    id : name
                    hint_text : "ENTER YOUR NAME"
                    on_text_validate : root.validateName(name.text)  

                Label:
                    text : " "
                    size_hint_y : 0.05

                TextInput:
                    text : ""
                    size_hint_x : 0.8
                    size_hint_y : 0.1
                    multiline: False   
                    id : age  
                    hint_text : "ENTER YOU AGE" 
                    on_text_validate : root.validateAge(age.text)    

<GenderScreen>:
    name: 'gender_screen'
    id: "genderScreen"
    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            orientation: "vertical"
            size_hint_y: 0.8
            spacing:10
            
            CustLabel:
                text: str("GENDER")
                color: 0,0,0,1
                size_hint_y: 0.1
                font_size : 50

            BoxLayout:
                orientation: "horizontal"
                size_hint_y: 0.7
                spacing:10
                CustCheckBox:
                    on_active: root.gender_is(self.value)
                    background_radio_normal : "male.jpg"
                    background_radio_down : "male_button_down.png"
                    group: "gender"
                    value: "male"
                    size_hint_x: .5
            
                CustCheckBox:
                    on_active: root.gender_is(self.value)
                    background_radio_normal : "female.jpg"
                    background_radio_down : "female_button_down.png"
                    group: "gender"
                    value: "female"
                    size_hint_x: .5
                
        NextButton:
            on_release:
                root.manager.transition.direction = 'left'
                root.manager.transition.duration = 1
                root.manager.current = 'height_screen'
 
<HeightScreen>:
    name: 'height_screen'
    id: 'heightScreen'
    BoxLayout:
        orientation : "vertical"

        BoxLayout:
            orientation: "vertical"
            size_hint_y: 0.2
            spacing:10
            
            CustLabel:
                text: str("HEIGHT")
                color: 0,0,0,1
                size_hint_y: 0.1
                font_size : 50


        BoxLayout:
            orientation : "horizontal"
            size_hint_y: 0.6

            # Box Containing HEIGHT Slider
            # Orientation is vertical
            BoxLayout:
                orientation: "horizontal"
                spacing:10
                size_hint_x : 0.25
    
                Slider:
                    id: height_id
                    orientation: "vertical"
                    background_vertical : "Symbol 1 – 1.png"
                    min: 1
                    max: 300
                    value: 1
                    step: 0.5
                    value_tracker:"true"
                    value_tracker_color : (1, 0, 0, 1)
                    cursor_image: "height_cursor.png"
                    cursor_size: (100, 100)

        
            # Box Containing Height's value
            # Orientation is vertical
            BoxLayout:
                orientation: "vertical"
                spacing:10
                size_hint_x : 0.25

                CustLabel:
                    text: str(height_id.value)+" cms"
                    font_size : sp(40)
                    size_hint_y: 0.3

                BoxLayout:
                    CustLabel:
                        id : ok
                        text: ""
                    

        NextButton:
            on_press:
                root.heightValue(str(height_id.value))
                root.manager.transition.direction = 'left'
                root.manager.current = 'weight_screen'

<WeightScreen>:
    name: 'weight_screen'
    BoxLayout:
        orientation : "vertical"

        BoxLayout:
            orientation: "vertical"
            size_hint_y: 0.2
            spacing:10
            
            CustLabel:
                text: str("WEIGHT")
                color: 0,0,0,1
                size_hint_y: 0.1
                font_size : 50
                size_hint_y: 0.1


        BoxLayout:
            orientation : "horizontal"
            size_hint_y: 0.6

            # Box Containing Weight Slider
            # Orientation is vertical
            BoxLayout:
                orientation: "vertical"
                spacing:10
                size_hint_x : 0.50

                CustLabel:
                    text: str(weight_id.value) + " kgs"
                    font_size : sp(40)
                    size_hint_y: 0.1

                Slider:
                    id: weight_id
                    size_hint_y: 0.1
                    orientation: "horizontal"
                    background_horizontal : "Symbol 1 – 2.png"
                    min: 1
                    max: 200
                    value: 0
                    step: 0.5
                    value_tracker:"true"
                    value_tracker_color : (1, 0, 0, 1)
                    cursor_image: "weight_cursor.png"
                    cursor_size: (100, 100)

        NextButton:
            on_press:
                root.weightValue(weight_id.value)
                root.manager.transition.direction = 'left'
                root.manager.current = 'optional_screen'

<OptionalScreen>:
    name: 'optional_screen'
    BoxLayout:
        orientation : "vertical"

        BoxLayout:
            orientation: "vertical"
            size_hint_y: 0.2
            spacing:10
            
            CustLabel:
                text: str("OPTIONAL DATA")
                color: 0,0,0,1
                size_hint_y: 0.1
                font_size : 50
                size_hint_y: 0.1


        BoxLayout:
            orientation : "vertical"
            size_hint_y: 0.6
            padding : 40, 80

            BoxLayout:
                orientation: "horizontal"
                size_hint_x : 1

                CustLabel:
                    text: "RBC = " + str(round(rbc.value, 2)) + " million mcL"
                    font_size : sp(20)
                    size_hint_x: 0.1

                Slider:
                    id: rbc
                    size_hint_x: 0.1
                    orientation: "horizontal"
                    min: 0
                    max: 10
                    value: 0
                    step: 0.01
                    value_tracker:"true"
                    value_tracker_color : (1, 0, 0, 1)
                    cursor_image: "weight_cursor.png"
                    cursor_size: (50, 50)

                CustLabel:
                    text: "WBC = "
                    font_size : sp(20)
                    size_hint_x: 0.1
                
                BoxLayout:
                    padding : 0, 30, 30, 40
                    size_hint_x : 0.1
                    TextInput:
                        id : wbc
                        text: ""
                        center : self.parent.center
                        multiline : False
                        hint_text : "per mcL of blood"
                        size_hint : None, None
                        size : 200, 30
                        on_text_validate : root.getWbc(wbc.text) 
            
            BoxLayout:
                orientation: "horizontal"
                size_hint_x : 1

                CustLabel:
                    text: "HB = " + str(round(hb.value, 2)) + " g/dL"
                    font_size : sp(20)
                    size_hint_x: 0.1

                Slider:
                    id: hb
                    size_hint_x: 0.1
                    orientation: "horizontal"
                    min: 0
                    max: 25
                    value: 0
                    step: 0.01
                    value_tracker:"true"
                    value_tracker_color : (1, 0, 0, 1)
                    cursor_image: "weight_cursor.png"
                    cursor_size: (50, 50)

                CustLabel:
                    text: "Platelets = "
                    font_size : sp(20)
                    size_hint_x: 0.1
                
                BoxLayout:
                    padding : 0, 30, 30, 40
                    size_hint_x : 0.1
                    TextInput:
                        id: platelets
                        text: ""
                        center : self.parent.center
                        multiline : False
                        hint_text : "μL"
                        size_hint : None, None
                        size : 200, 30
                        on_text_validate : root.getPlatelets(platelets.text)

        
        NextButton:
            on_press:
                root.result(rbc.value, hb.value)
                root.manager.transition.direction = 'left'
                root.manager.current = 'result_screen'

<ResultScreen>:
    name:'result_screen'
    on_pre_enter : root.calculateBMI(calculated_bmi)
    on_enter : calculateBmiImg.reload()
    BoxLayout:
        orientation : "vertical"

        BoxLayout:
            orientation: "vertical"
            spacing:10
            
            CustLabel:
                text: str("Results")
                color: 0,0,0,1
                font_size : 50
                size_hint_y: 0.1

            BoxLayout:
                orientation:"horizontal"
                size_hint_y: 0.8
                CustLabel:
                    text: " "
                    id: calculated_bmi
                    font_size : 20
                    size_hint_x: 0.35
                BoxLayout:
                    size_hint_x:0.65
                    Image:
                        id:calculateBmiImg
                        source: "data.png"
