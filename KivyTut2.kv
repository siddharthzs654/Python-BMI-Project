#: import CheckBox kivy.uix.checkbox

ScreenManagement:
    HomeScreen:
    GenderScreen:
    HeightScreen:
    WeightScreen:
    ResultScreen:


<CustLabel@Label>:
    color: 0, 0, 0, 1

<CustCheckBox@CheckBox>:
    _radio_state_image:
        self.background_radio_normal
    canvas:
        Rectangle:
            source: self._radio_state_image
            size: sp(200), sp(300)
            pos: int(self.center_x - sp(100)), int(self.center_y - sp(150))

<NextButton@Button>:
    text: "Next"
    size_hint_x: 1
    size_hint_y: 0.1  
    background_color: 0,0,1,1  

<HomeScreen>:
    name: 'home_screen'
    canvas:
        Rectangle:
            source: "Window_Background.png"
            pos: self.pos
            size: self.size
        
    BoxLayout:
        orientation: "vertical"

        # BoxLayout:
        #     orientation: "vertical"
        #     size_hint_y: 0.8
        #     spacing:10
            
        #     CustLabel:
        #         text: str("BODY MASS INDEX")
        #         color: 0,0,0,1
        #         size_hint_y: 0.1
        #         font_size : 50
                
        Button:
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.transition.duration = 0.5
                root.manager.current = 'gender_screen'
            text: "CHECK YOUR BMI"
            size_hint_x: 0.4
            size_hint_y: 0.1
            background_color: 0,0,1,1
 


<GenderScreen>:
    name: 'gender_screen'
    id: "genderScreen"
    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            orientation: "vertical"
            size_hint_y: 0.8
            spacing:10
            
            CustLabel:
                text: str("GENDER")
                color: 0,0,0,1
                size_hint_y: 0.1
                font_size : 50

            BoxLayout:
                orientation: "horizontal"
                size_hint_y: 0.7
                spacing:10
                CustCheckBox:
                    on_active: root.gender_is(self.value)
                    background_radio_normal : "male.jpg"
                    background_radio_down : "male_button_down.png"
                    group: "gender"
                    value: "male"
                    size_hint_x: .5
            
                CustCheckBox:
                    on_active: root.gender_is(self.value)
                    background_radio_normal : "female.jpg"
                    background_radio_down : "female_button_down.png"
                    group: "gender"
                    value: "female"
                    size_hint_x: .5
                
        NextButton:
            on_release:
                root.manager.transition.direction = 'left'
                root.manager.transition.duration = 1
                root.manager.current = 'height_screen'
 
<HeightScreen>:
    name: 'height_screen'
    id: 'heightScreen'
    BoxLayout:
        orientation : "vertical"

        BoxLayout:
            orientation: "vertical"
            size_hint_y: 0.2
            spacing:10
            
            CustLabel:
                text: str("HEIGHT")
                color: 0,0,0,1
                size_hint_y: 0.1
                font_size : 50


        BoxLayout:
            orientation : "horizontal"
            size_hint_y: 0.6

            # Box Containing HEIGHT Slider
            # Orientation is vertical
            BoxLayout:
                orientation: "horizontal"
                spacing:10
                size_hint_x : 0.25
    
                Slider:
                    id: height_id
                    orientation: "vertical"
                    background_vertical : "Symbol 1 – 1.png"
                    min: 0
                    max: 100
                    value: 0
                    step: 0.5
                    value_tracker:"true"
                    value_tracker_color : (1, 0, 0, 1)
                    cursor_image: "height_cursor.png"
                    cursor_size: (100, 100)

        
            # Box Containing Height's value
            # Orientation is vertical
            BoxLayout:
                orientation: "vertical"
                spacing:10
                size_hint_x : 0.25

                CustLabel:
                    text: str(height_id.value)
                    font_size : sp(40)
                    size_hint_y: 0.3

                BoxLayout:
                    # canvas.before:
                    #     Rectangle:
                    #         pos: self.pos
                    #         size: self.size
                    #         source: root.printTheGender()
                    CustLabel:
                        id : ok
                        text: ""
                    

        NextButton:
            on_press:
                root.heightValue(str(height_id.value))
                root.manager.transition.direction = 'left'
                root.manager.current = 'weight_screen'

<WeightScreen>:
    name: 'weight_screen'
    BoxLayout:
        orientation : "vertical"

        BoxLayout:
            orientation: "vertical"
            size_hint_y: 0.2
            spacing:10
            
            CustLabel:
                text: str("WEIGHT")
                color: 0,0,0,1
                size_hint_y: 0.1
                font_size : 50
                size_hint_y: 0.1


        BoxLayout:
            orientation : "horizontal"
            size_hint_y: 0.6

            # Box Containing Weight Slider
            # Orientation is vertical
            BoxLayout:
                orientation: "vertical"
                spacing:10
                size_hint_x : 0.50

                CustLabel:
                    text: str(weight_id.value)
                    font_size : sp(40)
                    size_hint_y: 0.1

                Slider:
                    id: weight_id
                    size_hint_y: 0.1
                    orientation: "horizontal"
                    background_horizontal : "Symbol 1 – 2.png"
                    min: 0
                    max: 100
                    value: 0
                    step: 0.5
                    value_tracker:"true"
                    value_tracker_color : (1, 0, 0, 1)
                    cursor_image: "weight_cursor.png"
                    cursor_size: (100, 100)

        Button:
            text: "Next"
            size_hint_x: 1
            size_hint_y: 0.1
            on_press:
                root.weightValue(weight_id.value)
                root.manager.transition.direction = 'left'
                root.manager.current = 'result_screen'

<ResultScreen>:
    name:'result_screen'
    BoxLayout:
        orientation : "vertical"

        BoxLayout:
            orientation: "vertical"
            size_hint_y: 0.2
            spacing:10
            
            CustLabel:
                text: str("Results")
                color: 0,0,0,1
                size_hint_y: 0.1
                font_size : 50
                size_hint_y: 0.1